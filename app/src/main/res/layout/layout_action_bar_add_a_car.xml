<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/action_bar_add_a_car"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button_add_a_car"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:contentDescription="@string/back_arrow_button"
            android:focusable="true"
            android:longClickable="true"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/label_add_a_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_din_bold"
            android:gravity="center_vertical"
            android:text="@string/add_a_car2"
            android:textColor="@color/white_text_color"
            android:textSize="18sp" />
    </LinearLayout>
