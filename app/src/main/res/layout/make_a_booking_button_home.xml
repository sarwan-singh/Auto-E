<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:transitionName="button_home_make_a_booking"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/make_a_booking_button_home">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:src="@drawable/burger_book"
                android:contentDescription="@string/book_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_a_booking_"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:layout_marginEnd="40dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white_text_color"
                android:fontFamily="@font/font_din_medium"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>